<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= yield :title %>
    </title>
    <link href="//cdn.leafletjs.com/leaflet/v0.7.7/leaflet.css" rel="stylesheet"/>
    <script src="//cdn.leafletjs.com/leaflet/v0.7.7/leaflet.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div class="top-bar">
        <%= link_to image_tag("WdXNyfs.png", :height => "40"), root_path%>
        <%= link_to image_tag("WynWorldtxt.png", :height => "40"), root_path %>
      <!-- <img src="/assets/WynWorldtxt.png"/> -->

        <div class="session">
          <div class="dash-menu">
            <!-- links -->
            <%= button_to "Students and Alumni", user_index_path, :class => "menu-btn", :method => :get%>
            <%= button_to "Cohorts", cohort_index_path, :class => "menu-btn", :method => :get%>
            <%= button_to "Companies", companies_path, :class => "menu-btn", :method => :get%><br>
          </div>
        <% if current_user %>
          <% if !current_user.admin %>
              <%= link_to image_tag(current_user.avatar_url(:sm_thumb)), user_path(current_user), class: "greeting" %>
              <% else %>
              <span class="greeting">Hi Admin</apan>
          <% end %>
          <%= link_to 'Sign Out', destroy_user_session_path, :method => 'delete' %>
        <% else %>
        <%= link_to 'Sign Up', new_user_registration_path %>
        <%= link_to 'Sign In', new_user_session_path %>
        <% end %>
        <p class="notice"><%#= notice %></p>
        <p class="alert"><%#= alert %></p>
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
